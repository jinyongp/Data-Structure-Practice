{
  "env": {
    "es2020": true,
    "node": true,
    "jest": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "rules": {
    "no-underscore-dangle": ["error", { "allowAfterThis": true }],
    "max-classes-per-file": ["error", 2]
  }
}
